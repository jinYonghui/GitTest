<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="@dimen/common_padding" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/work_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="任务单号:"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/rwdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_toRightOf="@+id/work_order_no"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/tj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="托运[发机]"
            android:textColor="@color/orange"
            android:textSize="@dimen/common_text_13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/atm_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="数量:"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_toRightOf="@+id/atm_msg"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="派单时间:"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/pdsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="托运单1状态:"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/tyzt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="确认接收"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </ListView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/assign_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="托运单2状态:"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />

        <TextView
            android:id="@+id/tyzt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_toRightOf="@+id/assign_man"
            android:text="到达"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/common_text_13" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@color/divider_gray" />

</LinearLayout>